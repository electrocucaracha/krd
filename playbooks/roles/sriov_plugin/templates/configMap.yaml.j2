apiVersion: v1
kind: ConfigMap
metadata:
  name: sriovdp-config
  namespace: kube-system
data:
  config.json: |
    {
        "resourceList": [{
                "resourceName": "intel_sriov_netdevice",
                "selectors": {
                    "vendors": ["8086"],
                    "devices": {{ sriov_devices | map('string') | list | tojson }},
                    "drivers": {{ sriov_drivers | map('string') | list | tojson }}
                }
           }
        ]
    }
